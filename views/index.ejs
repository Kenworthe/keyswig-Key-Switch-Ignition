<div class="flow-text center-align">
	<h2>Welcome, <%= currentUser.displayname %>!</h2>
	<p>Browse for cars: </p>
</div>

<div class="row">
	<% cars.forEach(function(car) { %>
	<% if (car.isSwappable === true ) { %>

	<div class="col s12 m6 l4">
		<div class="card sticky-action hoverable">
			<div class="card-image waves-effect waves-block waves-light">
				<img class="activator" src="/images/car-placeholder-1.jpg">
			</div>
			<div class="card-content">
				<span class="card-title activator grey-text text-darken-4"><%= car.year %> <%= car.make %> <%= car.model %><i class="material-icons right">subject</i></span>
				<p><a href="#"><%= car.owner.displayname %> | <%= car.location %></a></p>
			</div>
			<div class="card-reveal">
				<span class="card-title grey-text text-darken-4"><%= car.year %> <%= car.make %> <%= car.model %><i class="material-icons right">close</i></span>
				<ul>
					<li><%= car.description %></li>
					<div class="divider"></div>
					<li>Transmission: <%= car.transmission %></li>
					<li>Color: <%= car.color %></li>
					<li>Mileage: <%= car.mileage %></li>
					<div class="divider"></div>
					<li>Owner: <%= car.owner.displayname %></li>
					<li>Location: <%= car.location %></li>
				</ul>
			</div>
			<div class="card-action">
			<a class="blue white-text waves-effect waves-light btn-flat" href="/contact/<%= car.owner._id %>">Contact Owner</a>
			</div>
		</div>
	</div>

	<% } %>
	<% }) %>
</div>