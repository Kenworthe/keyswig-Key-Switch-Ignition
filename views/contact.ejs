<div class="container row center-align">
	<h3>Contact <%= user.displayname %></h3>

	<div class="card col s4 offset-s4">
		<div class="card-image">
			<p class="car-id">Profile Picture for <%= user.displayname %>: <%= currentUser._id %></p>
			<img class="responsive-img" src="#">
		</div>
	</div>
</div>

<div class="container row center-align">
	<ul class="flow-text">
		<li><b><%= user.displayname %></b></li>
		<li><%= user.local.email %></li>
		<li><%= user.location %></li>
		<br>
		<li>"<%= user.bio %>"</li>
	</ul>
</div>

</div>
<div>
	<h3><%= user.displayname %>'s cars:</h3>
	<div class="row">
	<% cars.forEach(function(car) { %>
	<div class="col s12 m6 l4">
			<div class="card sticky-action hoverable">
				<div class="card-image waves-effect waves-block waves-light">
					<img class="activator" src="/images/car-placeholder-1.jpg">
				</div>
				<div class="card-content">
					<span class="card-title activator grey-text text-darken-4"><%= car.year %> <%= car.make %> <%= car.model %><i class="material-icons right">subject</i></span>
					<p><a href="#"><%= user.displayname %> | <%= car.location %></a></p>
				</div>
				<div class="card-reveal">
					<span class="card-title grey-text text-darken-4"><%= car.year %> <%= car.make %> <%= car.model %><i class="material-icons right">close</i></span>
					<ul>
						<li><%= car.description %></li>
						<div class="divider"></div>
						<li>Transmission: <%= car.transmission %></li>
						<li>Trim: N/A</li>
						<li>Color: <%= car.color %></li>
						<li>Mileage: <%= car.mileage %></li>
						<div class="divider"></div>
						<li>Owner: <%= user.displayname %></li>
						<li>Location: <%= car.location %></li>
					</ul>
				</div>
				<div class="card-action">
				<a class="green white-text waves-effect waves-light btn-flat" href="mailto:<%= user.local.email %>">Request Switch (email)</a>
				</div>
			</div>
		</div>
	<% }) %>

</div>